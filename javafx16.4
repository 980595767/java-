      gridPane.add(lab2,0,1);
      gridPane.add(text1,1,0);
      gridPane.add(text2,1,1);

      text1.setOnAction(e->{
         double mile = Double.parseDouble(text1.getText());
         double kilometer = mile * 1.602307322544464;
         text2.setText("" + kilometer);
      });

      text2.setOnAction(e->{
         double km=Double.parseDouble(text2.getText());
         double mile=km/1.602307322544464;
         text1.setText(""+mile);
      });

      Scene scene=new Scene(gridPane);
      args.setTitle("excerse");
      args.setScene(scene);
      args.show();


   }
