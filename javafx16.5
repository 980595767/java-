public class test1 extends Application {
   public void start(Stage args) {
      GridPane gridPane=new GridPane();
      Label lab1=new Label("Dedmal");
      Label lab2=new Label("Hex");
      Label lab3=new Label("Binary");
      gridPane.addColumn(0,lab1,lab2,lab3);

      TextField text1=new TextField();
      TextField text2=new TextField();
      TextField text3=new TextField();
      text1.setAlignment(Pos.BASELINE_RIGHT);
      text2.setAlignment(Pos.BASELINE_RIGHT);
      text3.setAlignment(Pos.BASELINE_RIGHT);
      gridPane.addColumn(1,text1,text2,text3);
      gridPane.setHgap(10);

      text1.setOnAction(e->{
         text2.setText(Integer.toHexString(Integer.parseInt(text1.getText())));
         text3.setText(Integer.toBinaryString(Integer.parseInt(text1.getText())));
      });

      text2.setOnAction(e->{
         text1.setText(""+Integer.parseInt(text2.getText(),16));
         text3.setText(Integer.toBinaryString(Integer.parseInt(text2.getText(),16)));
      });

      text3.setOnAction(e->{
         text1.setText(""+Integer.parseInt(text3.getText(),2));
         text2.setText(Integer.toHexString(Integer.parseInt(text3.getText(),2)));
      });

      Scene scene=new Scene(gridPane);
      args.setTitle("javafx");
      args.setScene(scene);
      args.show();
   }
}

